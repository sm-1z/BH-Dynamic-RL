    <texture name="groundplane" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
    <material name="groundplane" texture="groundplane" texrepeat="5 5" texuniform="true" reflectance=".2"/>


    <mesh name="yao" file="yao.stl" scale="0.001 0.001 0.001"/>
